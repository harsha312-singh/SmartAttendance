<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fingerprint">

    <TextView
        android:id="@+id/Headerlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="79dp"
        android:layout_marginTop="55dp"
        android:padding="20dp"
        android:text="Authenticate your Finger"
        android:textColor="@android:color/background_dark"
        tools:textSize="18sp" />

    <ImageView
        android:id="@+id/FingerprintImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_fingerprint_black_24dp" />

    <TextView
        android:id="@+id/paralevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="211dp"
        android:text="Place your finger on the scanner to proceed further"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        tools:padding="20dp"
        tools:textColor="@android:color/holo_red_dark" />
</RelativeLayout>